<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>Document</title>
		<link rel="stylesheet" href="/css/normalize.css" />
		<link rel="stylesheet" href="/css/milligram.css" />
		<link rel="stylesheet" href="/css/style.css" />
		<script src="/js/menu-burger.js"></script>
	</head>
	<body>
		<div id="page-container">
			<div id="content-wrap">
				<!-- BEGIN HEADER -->
				<%- include('../partials/header') %>
				<!-- END HEADER -->


                <!-- BEGIN LOGIN -->
				<div class="form-container">
					<form class="form-signin" action="/login" method="POST">
						<h1>Sign in</h1>
                            <div class="form-group">
							    <input class="form-control" name="email" id="email" type="text" placeholder="Email address" minlength="5" maxlength="255" autofocus />
                            </div>
                            <div class="form-group">
                                <input class="form-control" name="password" id="passwords" type="password" placeholder="Password" maxlength="255" />
							</div>
                            <div class="form-group">
                                <input class="checkbox" type="checkbox" id="remember-me" />
							    <label for="remember-me">Remember me</label>
                            </div>
						<input  type="submit" value="Sign In" class="btn">
					</form>
				</div>
				<!-- END LOGIN -->

				<!-- BEGIN FOOTER -->
			</div>
			<%- include('../partials/footer') %>
            	<!-- END FOOTER -->
		</div>
	</body>

</html>
